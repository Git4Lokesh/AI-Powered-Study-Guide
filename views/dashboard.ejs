<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Study Guide Generator</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <!-- Custom CSS (loads after Bootstrap) -->
    <link rel="stylesheet" href="/css/style.css">
    
    <style>
        /* Floating Saved Content Button */
.floating-saved-btn {
    position: fixed;
    bottom: 30px;
    right: 30px;
    z-index: 1000;
    background: linear-gradient(135deg, var(--royal-purple) 0%, var(--royal-blue) 100%) !important;
    border: 2px solid var(--royal-gold) !important;
    color: white !important;
    border-radius: 50px !important;
    padding: 15px 25px !important;
    font-weight: 600;
    text-decoration: none;
    box-shadow: 0 8px 25px rgba(124, 58, 237, 0.4);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    backdrop-filter: blur(10px);
    animation: floatIn 0.6s ease-out;
}

.floating-saved-btn:hover {
    transform: translateY(-5px) scale(1.05);
    box-shadow: 0 15px 35px rgba(124, 58, 237, 0.6);
    color: white !important;
    border-color: var(--royal-gold) !important;
}

.floating-saved-btn:focus {
    outline: 2px solid var(--royal-gold);
    outline-offset: 3px;
    color: white !important;
}

.floating-saved-btn .badge {
    background: var(--royal-gold) !important;
    color: var(--dark-bg) !important;
    font-size: 0.7rem;
    font-weight: 700;
    padding: 4px 8px;
    border-radius: 10px;
    margin-left: 8px;
    animation: pulse 2s infinite;
}

@keyframes floatIn {
    from {
        opacity: 0;
        transform: translateY(100px) scale(0.8);
    }
    to {
        opacity: 1;
        transform: translateY(0) scale(1);
    }
}

@keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
}

/* Responsive adjustments */
@media (max-width: 768px) {
    .floating-saved-btn {
        bottom: 20px;
        right: 20px;
        padding: 12px 20px !important;
        font-size: 0.9rem;
    }
}

@media (max-width: 480px) {
    .floating-saved-btn {
        bottom: 20px;
        right: 15px;
        padding: 10px 16px !important;
        font-size: 0.85rem;
    }
    
    .floating-saved-btn .btn-text {
        display: none; /* Hide text on very small screens, show only icon */
    }
}

        /* Royal Dark Theme Custom Styles */
        :root {
            --royal-purple: #7C3AED;
            --royal-blue: #2563EB;
            --royal-gold: #F59E0B;
            --dark-bg: #0F172A;
            --dark-card: #1E293B;
            --dark-border: #334155;
            --royal-gradient: linear-gradient(135deg, #0F172A 0%, #1E293B 25%, #312E81 50%, #7C3AED 100%);
            --text-primary: #F8FAFC;
            --text-secondary: #CBD5E1;
            --text-muted: #94A3B8;
        }

        /* Background Gradient */
        .bg-gradient-primary {
            background: var(--royal-gradient) !important;
            min-height: 100vh;
        }

        /* Main Card Dark Theme */
        .card {
            background: var(--dark-card) !important;
            border: 1px solid var(--dark-border) !important;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.8) !important;
        }

        .card-body {
            color: var(--text-primary);
        }

        /* Form Labels */
        .form-label {
            color: var(--text-primary) !important;
        }

        .form-label .text-primary {
            color: var(--royal-gold) !important;
        }

        /* Form Controls */
        .form-control, .form-select {
            background-color: var(--dark-bg) !important;
            border: 1px solid var(--dark-border) !important;
            color: var(--text-primary) !important;
        }

        .form-control:focus, .form-select:focus {
            background-color: var(--dark-bg) !important;
            border-color: var(--royal-purple) !important;
            box-shadow: 0 0 0 0.2rem rgba(124, 58, 237, 0.25) !important;
            color: var(--text-primary) !important;
        }

        .form-control::placeholder {
            color: var(--text-muted) !important;
        }

        /* Input Group Text */
        .input-group-text {
            background-color: var(--dark-bg) !important;
            border: 1px solid var(--dark-border) !important;
            color: var(--royal-gold) !important;
        }

        /* Button Styles */
        .btn-primary {
            background: linear-gradient(135deg, var(--royal-purple) 0%, var(--royal-blue) 100%) !important;
            border: none !important;
            color: white !important;
        }

        .btn-primary:hover, .btn-primary:focus {
            background: linear-gradient(135deg, #8B5CF6 0%, #3B82F6 100%) !important;
            transform: translateY(-1px);
            box-shadow: 0 10px 25px rgba(124, 58, 237, 0.4) !important;
        }

        .btn-outline-primary {
            background: var(--dark-bg) !important;
            border: 2px solid var(--dark-border) !important;
            color: var(--text-primary) !important;
            transition: all 0.3s ease;
        }

        .btn-outline-primary:hover, .btn-outline-primary:focus {
            background: linear-gradient(135deg, var(--royal-purple), var(--royal-blue)) !important;
            border-color: var(--royal-purple) !important;
            color: white !important;
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(124, 58, 237, 0.3);
        }

        .btn-check:checked + .btn-outline-primary {
            background: linear-gradient(135deg, var(--royal-purple), var(--royal-blue)) !important;
            border-color: var(--royal-purple) !important;
            color: white !important;
            box-shadow: 0 8px 25px rgba(124, 58, 237, 0.4);
        }

        /* Radio Button Group */
        .btn-group .btn-outline-primary:first-child {
            border-top-left-radius: 0.5rem !important;
            border-bottom-left-radius: 0.5rem !important;
        }

        .btn-group .btn-outline-primary:last-child {
            border-top-right-radius: 0.5rem !important;
            border-bottom-right-radius: 0.5rem !important;
        }

        /* Study Type Cards */
        .btn-outline-primary.btn-lg.w-100 {
            background: var(--dark-bg) !important;
            border: 2px solid var(--dark-border) !important;
            color: var(--text-primary) !important;
            border-radius: 1rem !important;
            transition: all 0.3s ease;
        }

        .btn-outline-primary.btn-lg.w-100:hover {
            border-color: var(--royal-gold) !important;
            box-shadow: 0 8px 25px rgba(245, 158, 11, 0.2);
            transform: translateY(-3px);
        }

        .btn-check:checked + .btn-outline-primary.btn-lg.w-100 {
            background: linear-gradient(135deg, var(--royal-purple), var(--royal-blue)) !important;
            border-color: var(--royal-gold) !important;
            color: white !important;
            box-shadow: 0 15px 35px rgba(124, 58, 237, 0.4);
        }

        /* Icons in buttons */
        .btn-outline-primary .bi {
            color: var(--royal-gold) !important;
        }

        .btn-check:checked + .btn-outline-primary .bi {
            color: var(--royal-gold) !important;
        }

        /* Text Colors */
        .text-muted {
            color: var(--text-muted) !important;
        }

        .text-dark {
            color: var(--text-primary) !important;
        }

        .form-text small {
            color: var(--text-muted) !important;
        }

        /* Header Badge */
        .bg-white.bg-opacity-10 {
            background: rgba(124, 58, 237, 0.2) !important;
            border: 1px solid rgba(245, 158, 11, 0.3);
        }

        /* Select Options (for better browser compatibility) */
        .form-select option {
            background-color: var(--dark-card);
            color: var(--text-primary);
        }

        /* Hover Effects */
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 32px 64px -12px rgba(0, 0, 0, 0.9) !important;
            transition: all 0.3s ease;
        }

        /* Custom Scrollbar for select dropdowns */
        .form-select::-webkit-scrollbar {
            width: 8px;
        }

        .form-select::-webkit-scrollbar-track {
            background: var(--dark-bg);
        }

        .form-select::-webkit-scrollbar-thumb {
            background: var(--royal-purple);
            border-radius: 4px;
        }

        /* Ensure proper text contrast */
        .fw-semibold {
            color: var(--text-primary) !important;
        }

        /* Footer text */
        .text-white-50 {
            color: var(--text-muted) !important;
        }

        /* Add subtle animations */
        * {
            transition: all 0.3s ease;
        }

        /* Focus states for accessibility */
        .form-control:focus,
        .form-select:focus,
        .btn:focus {
            outline: 2px solid var(--royal-gold);
            outline-offset: 2px;
        }
    </style>
</head>
<body class="bg-gradient-primary">
    <!-- Hero Section -->
    <div class="container-fluid min-vh-100 d-flex align-items-center">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 col-xl-6">
                    
                    <!-- Header Section -->
                    <div class="text-center mb-5">
                        <div class="d-inline-flex align-items-center bg-white bg-opacity-10 rounded-pill px-4 py-2 mb-4">
                            <i class="bi bi-robot text-white me-2"></i>
                            <span class="text-white fw-semibold">AI-Powered Learning Platform</span>
                        </div>
                        <h1 class="display-4 fw-bold text-white mb-3">
                            Study Guide Generator
                        </h1>
                        <p class="lead text-white-50 mb-0">
                            Generate personalized study materials instantly with the power of AI
                        </p>
                    </div>
                    
                    <!-- Main Form Card -->
                    <div class="card shadow-lg border-0 rounded-4">
                        <div class="card-body p-5">
                            <form action="/generate" method="POST" enctype="multipart/form-data">
                                
                                <!-- Input Method Selection -->
                                <div class="mb-4">
                                    <label class="form-label fw-semibold text-dark mb-3">
                                        <i class="bi bi-book text-primary me-2"></i>
                                        What would you like to study?
                                    </label>
                                    
                                    <!-- Input Method Toggle -->
                                    <div class="btn-group w-100 mb-3" role="group">
                                        <input type="radio" class="btn-check" name="inputMethod" id="topicInput" value="topic" checked>
                                        <label class="btn btn-outline-primary btn-lg" for="topicInput">
                                            <i class="bi bi-keyboard me-2"></i>Enter Topic
                                        </label>
                                        
                                        <input type="radio" class="btn-check" name="inputMethod" id="pdfInput" value="pdf">
                                        <label class="btn btn-outline-primary btn-lg" for="pdfInput">
                                            <i class="bi bi-file-pdf me-2"></i>Upload PDF
                                        </label>
                                    </div>
                                    
                                    <!-- Topic Input Section -->
                                    <div id="topicSection">
                                        <div class="input-group input-group-lg">
                                            <span class="input-group-text bg-primary bg-opacity-10 border-primary border-opacity-25">
                                                <i class="bi bi-search text-primary"></i>
                                            </span>
                                            <input type="text" 
                                                   class="form-control border-primary border-opacity-25" 
                                                   id="topic" 
                                                   name="topic" 
                                                   placeholder="e.g., World War II, Algebra, Photosynthesis">
                                        </div>
                                        <div class="form-text">
                                            <small class="text-muted">Enter any subject or topic you want to master</small>
                                        </div>
                                    </div>
                                    
                                    <!-- PDF Input Section (Initially Hidden) -->
                                    <div id="pdfSection" style="display: none;">
                                        <div class="input-group input-group-lg">
                                            <span class="input-group-text bg-primary bg-opacity-10 border-primary border-opacity-25">
                                                <i class="bi bi-file-pdf text-primary"></i>
                                            </span>
                                            <input type="file" 
                                                   class="form-control border-primary border-opacity-25" 
                                                   id="handout" 
                                                   name="document" 
                                                   accept=".pdf">
                                        </div>
                                        <div class="form-text">
                                            <small class="text-muted">Upload your course handouts, lecture notes, or theory PDFs (Max 10MB)</small>
                                        </div>
                                    </div>
                                </div>

                                <!-- Grade Level Section -->
                                <div class="mb-4">
                                    <label for="gradeLevel" class="form-label fw-semibold text-dark mb-3">
                                        <i class="bi bi-mortarboard text-primary me-2"></i>
                                        Select your academic level
                                    </label>
                                    <select class="form-select form-select-lg border-primary border-opacity-25" 
                                            id="gradeLevel" 
                                            name="gradeLevel" 
                                            required>
                                        <option value="">Choose your grade level...</option>
                                        <option value="elementary">
                                            🎯 Elementary (K-5) - Basic concepts and foundations
                                        </option>
                                        <option value="middle">
                                            📚 Middle School (6-8) - Intermediate understanding
                                        </option>
                                        <option value="high">
                                            🎓 High School (9-12) - Advanced concepts
                                        </option>
                                        <option value="college">
                                            🏛️ College - University level depth
                                        </option>
                                    </select>
                                </div>

                                <!-- Study Type Section -->
                                <div class="mb-5">
                                    <label class="form-label fw-semibold text-dark mb-3">
                                        <i class="bi bi-collection text-primary me-2"></i>
                                        Choose your preferred study format
                                    </label>
                                    
                                    <div class="row g-3">
                                        <!-- Quick Notes Option -->
                                        <div class="col-12">
                                            <input type="radio" 
                                                   class="btn-check" 
                                                   name="studyType" 
                                                   id="quicknotes" 
                                                   value="quicknotes" 
                                                   required>
                                            <label class="btn btn-outline-primary btn-lg w-100 text-start p-4" 
                                                   for="quicknotes">
                                                <div class="d-flex align-items-center">
                                                    <div class="me-3">
                                                        <i class="bi bi-journal-text fs-2"></i>
                                                    </div>
                                                    <div class="flex-grow-1">
                                                        <div class="fw-semibold mb-1">Quick Notes</div>
                                                        <small class="text-muted">
                                                            Comprehensive study notes with key concepts and examples
                                                        </small>
                                                    </div>
                                                </div>
                                            </label>
                                        </div>

                                        <!-- Flash Cards Option -->
                                        <div class="col-12">
                                            <input type="radio" 
                                                   class="btn-check" 
                                                   name="studyType" 
                                                   id="flashcards" 
                                                   value="flashcards" 
                                                   required>
                                            <label class="btn btn-outline-primary btn-lg w-100 text-start p-4" 
                                                   for="flashcards">
                                                <div class="d-flex align-items-center">
                                                    <div class="me-3">
                                                        <i class="bi bi-card-text fs-2"></i>
                                                    </div>
                                                    <div class="flex-grow-1">
                                                        <div class="fw-semibold mb-1">Flash Cards</div>
                                                        <small class="text-muted">
                                                            Interactive question-answer pairs for active recall practice
                                                        </small>
                                                    </div>
                                                </div>
                                            </label>
                                        </div>

                                        <!-- Quiz Option -->
                                        <div class="col-12">
                                            <input type="radio" 
                                                   class="btn-check" 
                                                   name="studyType" 
                                                   id="quiz" 
                                                   value="quiz" 
                                                   required>
                                            <label class="btn btn-outline-primary btn-lg w-100 text-start p-4" 
                                                   for="quiz">
                                                <div class="d-flex align-items-center">
                                                    <div class="me-3">
                                                        <i class="bi bi-question-circle fs-2"></i>
                                                    </div>
                                                    <div class="flex-grow-1">
                                                        <div class="fw-semibold mb-1">Interactive Quiz</div>
                                                        <small class="text-muted">
                                                            Multiple-choice questions to test your knowledge
                                                        </small>
                                                    </div>
                                                </div>
                                            </label>
                                        </div>
                                    </div>
                                </div>

                                <!-- Submit Button -->
                                <div class="d-grid">
                                    <button type="submit" 
                                            class="btn btn-primary btn-lg py-3 fw-semibold">
                                        <i class="bi bi-magic me-2"></i>
                                        Generate Study Materials
                                        <i class="bi bi-arrow-right ms-2"></i>
                                    </button>
                                </div>

                            </form>
                        </div>
                    </div>
                                                </form>
                        </div>
                    </div>

                    <!-- 🔧 ADD THIS SECTION: Saved Content Navigation -->
                    <div class="row mt-4 mb-3">
                        <div class="col-12">
                            <div class="text-center">
                                <a href="/saved-content" class="btn btn-outline-primary btn-lg rounded-pill px-5 py-3 floating-saved-btn">
                                    <i class="bi bi-bookmarks me-2"></i>
                                    View Saved Content
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Footer -->

                    <!-- Footer -->
                    <div class="text-center mt-4">
                        <small class="text-white-50">
                            Powered by AI • Personalized for your learning level
                        </small>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const topicRadio = document.getElementById('topicInput');
            const pdfRadio = document.getElementById('pdfInput');
            const topicSection = document.getElementById('topicSection');
            const pdfSection = document.getElementById('pdfSection');
            const topicInput = document.getElementById('topic');
            const pdfInput = document.getElementById('handout');
            
            function toggleInputSections() {
                if (topicRadio.checked) {
                    topicSection.style.display = 'block';
                    pdfSection.style.display = 'none';
                    topicInput.required = true;
                    pdfInput.required = false;
                    pdfInput.value = '';
                } else if (pdfRadio.checked) {
                    topicSection.style.display = 'none';
                    pdfSection.style.display = 'block';
                    topicInput.required = false;
                    topicInput.value = '';
                }
            }
            
            topicRadio.addEventListener('change', toggleInputSections);
            pdfRadio.addEventListener('change', toggleInputSections);
            
            toggleInputSections();
        });
    </script>
</body>
</html>
