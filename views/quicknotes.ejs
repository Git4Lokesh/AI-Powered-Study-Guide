        }


        .side-expansion-bubble .bubble-title {
            font-weight: 600;
            color: var(--royal-gold) !important;
            font-size: 1.1rem;
            margin: 0;
            flex-grow: 1;
        }


        .side-expansion-bubble .close-bubble {
            background: none;
            border: none;
            font-size: 1.3rem;
            cursor: pointer;
            color: var(--text-muted) !important;
            padding: 0;
            margin-left: 12px;
            line-height: 1;
            width: 28px;
            height: 28px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            transition: all 0.3s ease;
        }


        .side-expansion-bubble .close-bubble:hover {
            background: rgba(124, 58, 237, 0.2);
            color: var(--royal-gold) !important;
            transform: scale(1.1);
        }


        .side-expansion-bubble .bubble-content {
            color: var(--text-secondary) !important;
        }


        .side-expansion-bubble .bubble-content h6 {
            margin: 0 0 10px 0;
            color: var(--royal-gold) !important;
            font-size: 1rem;
        }


        .side-expansion-bubble .bubble-content p {
            margin: 0 0 10px 0;
            line-height: 1.6;
            color: var(--text-secondary) !important;
        }


        .side-expansion-bubble .bubble-content ul {
            margin: 10px 0;
            padding-left: 20px;
        }


        .side-expansion-bubble .bubble-content li {
            margin: 5px 0;
            font-size: 0.9rem;
            line-height: 1.5;
            color: var(--text-secondary) !important;
        }


        .side-expansion-bubble .bubble-content strong {
            color: var(--royal-gold) !important;
        }


        .expansion-loading {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 25px;
            color: var(--text-muted) !important;
            font-size: 0.95rem;
        }


        .selected-text-preview {
            background: rgba(124, 58, 237, 0.15) !important;
            padding: 10px 15px;
            border-radius: 8px;
            margin-bottom: 15px;
            border-left: 3px solid var(--royal-gold);
            font-size: 0.9rem;
            font-style: italic;
            color: var(--text-muted) !important;
        }


        .notes-container-wrapper {
            position: relative;
        }

        /* ðŸ”§ ADDED: Success toast styling */
        .success-toast {
            position: fixed;
            top: 20px;
            right: 20px;
            background: linear-gradient(135deg, #10B981, #059669) !important;
            color: white;
            padding: 15px 20px;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(16, 185, 129, 0.3);
            z-index: 1100;
            display: none;
            animation: slideInFromRight 0.4s ease-out;
            border: 2px solid var(--royal-gold);
        }

        @keyframes slideInFromRight {
            from { transform: translateX(100%); opacity: 0; }
            to { transform: translateX(0); opacity: 1; }
        }


        /* Responsive adjustments */
        @media (max-width: 1400px) {
            .side-expansion-bubble {
                right: 320px;
                width: 350px;
            }
        }


        @media (max-width: 1200px) {
            .side-expansion-bubble {
                right: 300px;
                width: 320px;
            }
            .text-selection-popup {
                width: 280px;
            }
        }


        @media (max-width: 768px) {
            .text-selection-popup {
                right: 10px;
                left: 10px;
                width: auto;
                max-width: none;
            }
            
            .side-expansion-bubble {
                right: 10px;
                left: 10px;
                width: auto;
                max-width: none;
                top: 20%;
            }
        }
    </style>
</head>
