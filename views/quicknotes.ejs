.notes-container-wrapper {
    position: relative;
}

/* Responsive adjustments */
@media (max-width: 1200px) {
    .side-expansion-bubble {
        width: 280px;
        right: 10px;
    }
    .text-selection-popup {
        width: 280px;
        right: 10px;
    }
