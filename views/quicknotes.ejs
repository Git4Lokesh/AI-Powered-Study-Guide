    margin: 0 0 8px 0;
    line-height: 1.5;
}

.side-expansion-bubble .bubble-content ul {
    margin: 8px 0;
    padding-left: 18px;
}

.side-expansion-bubble .bubble-content li {
    margin: 4px 0;
    font-size: 0.85rem;
    line-height: 1.4;
}

.side-expansion-bubble .bubble-content strong {
    color: var(--bs-primary);
}

.expansion-loading {
